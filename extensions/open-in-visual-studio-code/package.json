{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "open-in-visual-studio-code",
  "title": "Open in Visual Studio Code",
  "description": "Open current File Manager directory, selected folder or file in Visual Studio Code.",
  "icon": "icon.png",
  "author": "shubzkothekar",
  "contributors": [
    "thomas",
    "ErikFisher",
    "yusifaliyevpro"
  ],
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Open in Visual Studio Code",
      "description": "Open current File Manager directory, selected folder or file in Visual Studio Code.",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "title": "Code Editor Variant",
      "description": "Code editor to open the selected File Manager item into.",
      "name": "VSCodeVariant",
      "type": "dropdown",
      "required": false,
      "default": "com.microsoft.VSCode",
      "data": [
        {
          "title": "Visual Studio Code",
          "value": "com.microsoft.VSCode"
        },
        {
          "title": "Visual Studio Code - Insiders",
          "value": "com.microsoft.VSCodeInsiders"
        },
        {
          "title": "VSCodium",
          "value": "com.vscodium"
        },
        {
          "title": "Cursor",
          "value": "com.todesktop.230313mzl4w4u92"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.3",
    "@raycast/utils": "^2.2.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}
