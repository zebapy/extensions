{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "src/**/*",
    "raycast-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "module": "commonjs",
    "target": "ES2022",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  }
}