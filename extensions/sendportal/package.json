{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sendportal",
  "title": "SendPortal",
  "description": "Open Source Email Marketing Software",
  "icon": "sendportal.png",
  "author": "xmok",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Communication"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "sendportal_url",
      "title": "SendPortal URL",
      "placeholder": "https://send.example.com",
      "description": "URL of SendPortal Instance",
      "type": "textfield",
      "required": true
    },
    {
      "name": "sendportal_api_key",
      "title": "SendPortal API Key",
      "placeholder": "XXXX...xxx",
      "description": "API Key for SendPortal Instance",
      "type": "password",
      "required": true
    }
  ],
  "commands": [
    {
      "name": "subscribers",
      "title": "Subscribers",
      "description": "Manage Subscribers",
      "mode": "view"
    },
    {
      "name": "templates",
      "title": "Templates",
      "description": "Manage Templates",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.8",
    "@raycast/utils": "^2.2.2",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "@types/turndown": "^5.0.6",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
