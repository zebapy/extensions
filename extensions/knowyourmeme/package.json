{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "knowyourmeme",
  "title": "KnowYourMeme",
  "description": "Search KnowYourMeme.com memes directly from Raycast and get details!",
  "icon": "extension-icon.png",
  "author": "muhammadrizo",
  "platforms": [
    "Windows",
    "macOS"
  ],
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search Memes",
      "subtitle": "KnowYourMeme",
      "description": "Search for memes on KnowYourMeme.com",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "viewType",
      "title": "View Mode",
      "description": "Choose how to display results",
      "type": "dropdown",
      "required": false,
      "default": "grid",
      "data": [
        {
          "title": "Grid View",
          "value": "grid"
        },
        {
          "title": "List View",
          "value": "list"
        }
      ]
    },
    {
      "name": "maxResults",
      "description": "Maximum number of results to display for a search",
      "type": "textfield",
      "required": false,
      "title": "Max Results",
      "placeholder": "10",
      "default": "10"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.0",
    "@raycast/utils": "^2.2.1",
    "knowyourmeme-js": "^1.3.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "dev": "ray develop",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix",
    "build": "ray build",
    "publish": "npx @raycast/api@latest publish",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1"
  }
}
