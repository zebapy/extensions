{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "rg-adguard-links",
  "title": "RG AdGuard Links",
  "description": "Convert Microsoft Store URLs to rg-adguard.net download links",
  "icon": "icon.png",
  "author": "jergensturdley",
  "contributors": [
    "0xdhrv"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "convert-url",
      "title": "Convert Store URL",
      "subtitle": "RG AdGuard Links",
      "description": "Convert Microsoft Store URL to rg-adguard.net link",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.7",
    "@raycast/utils": "^2.2.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "24.10.1",
    "@types/react": "19.2.7",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}
