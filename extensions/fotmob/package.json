{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "fotmob",
  "title": "Fotmob",
  "version": "1.0.0",
  "description": "Football match schedule, result, table",
  "icon": "command-icon.png",
  "author": "iamlas",
  "contributors": [
    "j3lte",
    "Antitoxic9639",
    "guztaver",
    "pernielsentikaer"
  ],
  "categories": [
    "News",
    "Applications"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "matchday",
      "title": "Match Day",
      "subtitle": "Fotmob",
      "description": "View matchday schedule, result",
      "mode": "view"
    },
    {
      "name": "favorite",
      "title": "Favorite",
      "subtitle": "Fotmob",
      "description": "List favorite teams, players, leagues",
      "mode": "view"
    },
    {
      "name": "team",
      "title": "Team Detail",
      "subtitle": "Fotmob",
      "description": "View detail of a team by team's id",
      "mode": "view",
      "arguments": [
        {
          "name": "teamId",
          "type": "text",
          "description": "Team ID",
          "placeholder": "Enter team ID",
          "required": true
        }
      ]
    },
    {
      "name": "player",
      "title": "Player Detail",
      "subtitle": "Fotmob",
      "description": "View detail of a player by player's id",
      "mode": "view",
      "arguments": [
        {
          "name": "playerId",
          "type": "text",
          "description": "Player ID",
          "placeholder": "Enter player ID",
          "required": true
        }
      ]
    },
    {
      "name": "league-table",
      "title": "League Table",
      "subtitle": "Fotmob",
      "description": "View league table by league's id",
      "mode": "view",
      "arguments": [
        {
          "name": "leagueId",
          "type": "text",
          "description": "League ID",
          "placeholder": "Enter league ID",
          "required": true
        }
      ]
    },
    {
      "name": "match-detail",
      "title": "Match Detail",
      "subtitle": "Fotmob",
      "description": "View detail of a match by match's id",
      "mode": "view",
      "arguments": [
        {
          "name": "matchId",
          "type": "text",
          "description": "Match ID",
          "placeholder": "Enter match ID",
          "required": true
        }
      ]
    },
    {
      "name": "search-players",
      "title": "Search Players",
      "subtitle": "Fotmob",
      "description": "Search for players",
      "mode": "view"
    },
    {
      "name": "search-teams",
      "title": "Search Teams",
      "subtitle": "Fotmob",
      "description": "Search for teams",
      "mode": "view"
    },
    {
      "name": "favorite-league-tables",
      "title": "Favorite League Tables",
      "subtitle": "Fotmob",
      "description": "View favorite league tables",
      "mode": "view"
    },
    {
      "name": "favorite-upcoming-matches",
      "title": "Favorite Upcoming Matches",
      "subtitle": "Fotmob",
      "description": "View upcoming matches for favorite teams",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.0",
    "@raycast/utils": "^2.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS"
  ]
}
