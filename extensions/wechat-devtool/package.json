{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "wechat-devtool",
  "title": "WeChat DevTool",
  "description": "Quickly open WeChat mini program project via official CLI.",
  "version": "1.4.0",
  "type": "module",
  "icon": "icon.png",
  "author": "tofrankie",
  "license": "MIT",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "scripts": {
    "dev": "ray develop",
    "build": "ray build -e dist",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix",
    "publish": "ray publish"
  },
  "dependencies": {
    "@raycast/api": "^1.103.6",
    "@raycast/utils": "^1.19.1",
    "pinyin-pro": "^3.27.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "categories": [
    "Developer Tools"
  ],
  "keywords": [
    "Developer Tools",
    "WeChat",
    "WeChat DevTool",
    "WeChat mini program",
    "miniprogram",
    "miniapp"
  ],
  "commands": [
    {
      "name": "open-project",
      "title": "Open Project",
      "description": "Open mini program project via WeChat DevTool.",
      "mode": "view"
    },
    {
      "name": "preview-project",
      "title": "Preview Project",
      "description": "Generate QR Code for mini program project.",
      "mode": "view"
    },
    {
      "name": "configure-projects",
      "title": "Configure Projects",
      "description": "Configure mini program projects.",
      "mode": "view"
    }
  ]
}
