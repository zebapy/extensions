{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kalshi",
  "title": "Kalshi",
  "description": "Search, view, and favorite prediction markets on Kalshi",
  "icon": "extension-icon.png",
  "author": "Osprey",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Finance",
    "News"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-markets",
      "title": "Search Markets",
      "description": "Browse prediction markets on Kalshi",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.6",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}