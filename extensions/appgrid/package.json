{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "appgrid",
  "title": "AppGrid",
  "description": "Smart app launcher with grid view and category grouping",
  "icon": "icon.png",
  "author": "jungwoon",
  "platforms": [
    "macOS"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search AppGrid",
      "description": "Launch macOS apps with smart categorization and grid view",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
