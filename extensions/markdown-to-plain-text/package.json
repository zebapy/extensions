{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "markdown-to-plain-text",
  "title": "Markdown to Plain Text",
  "description": "Convert Markdown-formatted text to plain text format for quick viewing and editing.",
  "icon": "command-icon.png",
  "author": "skyline-123",
  "contributors": [
    "litomore"
  ],
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Markdown to Plain Text",
      "description": "Convert Markdown-formatted text to plain text format for quick viewing and editing.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.10",
    "markdown-it": "^14.1.0",
    "markdown-it-plain-text": "^0.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "2.1.1",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "24.10.1",
    "@types/react": "19.2.7",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
