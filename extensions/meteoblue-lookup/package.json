{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "meteoblue-lookup",
  "title": "Meteoblue Lookup",
  "description": "Check the weather via the Meteoblue API",
  "icon": "meteoblue-icon.png",
  "author": "fcarysnyder",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "News"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "meteoblue",
      "title": "Meteoblue Weather",
      "description": "Check weather conditions and forecasts",
      "mode": "view"
    },
    {
      "name": "today",
      "title": "Today's Forecast",
      "description": "Hourly weather forecast for today",
      "mode": "view"
    },
    {
      "name": "forecast",
      "title": "5-Day Forecast",
      "description": "Daily weather forecast for the next 5 days",
      "mode": "view"
    },
    {
      "name": "rain",
      "title": "Will It Rain?",
      "description": "Quick check for rain probability today",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apikey",
      "type": "password",
      "required": true,
      "title": "meteoblue API Key",
      "description": "Your meteoblue API key (get it from meteoblue.com)"
    },
    {
      "name": "temperatureUnit",
      "type": "dropdown",
      "required": false,
      "title": "Temperature Unit",
      "description": "Unit for temperature values",
      "default": "F",
      "data": [
        {
          "title": "Fahrenheit (°F)",
          "value": "F"
        },
        {
          "title": "Celsius (°C)",
          "value": "C"
        }
      ]
    },
    {
      "name": "windspeedUnit",
      "type": "dropdown",
      "required": false,
      "title": "Wind Speed Unit",
      "description": "Unit for wind speed values",
      "default": "mph",
      "data": [
        {
          "title": "Miles per hour (mph)",
          "value": "mph"
        },
        {
          "title": "Kilometers per hour (km/h)",
          "value": "kmh"
        },
        {
          "title": "Meters per second (m/s)",
          "value": "ms"
        },
        {
          "title": "Knots (kn)",
          "value": "kn"
        }
      ]
    },
    {
      "name": "precipitationUnit",
      "type": "dropdown",
      "required": false,
      "title": "Precipitation Unit",
      "description": "Unit for precipitation values",
      "default": "inch",
      "data": [
        {
          "title": "Inches (in)",
          "value": "inch"
        },
        {
          "title": "Millimeters (mm)",
          "value": "mm"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.6",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}