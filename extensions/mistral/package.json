{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mistral",
  "title": "Mistral",
  "description": "An unofficial extension to use Mistral AI from Raycast",
  "icon": "mistral-logo.png",
  "author": "colinlienard",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "ask",
      "title": "Ask Question",
      "subtitle": "Mistral",
      "description": "Create a new conversation",
      "mode": "view"
    },
    {
      "name": "conversations",
      "title": "Conversations",
      "subtitle": "Mistral",
      "description": "Browse your past conversations",
      "mode": "view"
    },
    {
      "name": "system-prompt",
      "title": "System Prompt",
      "subtitle": "Mistral",
      "description": "Set the system prompt for your upcoming conversations",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "label": "API Key",
      "title": "API Key",
      "description": "Your Mistral API key",
      "placeholder": "Your Mistral API key",
      "required": true,
      "type": "password"
    },
    {
      "name": "defaultModel",
      "label": "Default Model",
      "title": "Default Model",
      "description": "The default Mistral model to use for new conversations",
      "required": false,
      "type": "dropdown",
      "default": "mistral-small-latest",
      "data": [
        {
          "title": "Mistral Small",
          "value": "mistral-small-latest"
        },
        {
          "title": "Mistral Medium",
          "value": "mistral-medium-latest"
        },
        {
          "title": "Mistral Large",
          "value": "mistral-large-latest"
        },
        {
          "title": "Codestral",
          "value": "codestral-latest"
        },
        {
          "title": "Pixtral 12B (Vision)",
          "value": "pixtral-12b-latest"
        },
        {
          "title": "Pixtral Large (Vision)",
          "value": "pixtral-large-latest"
        }
      ]
    }
  ],
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "publish": "npx @raycast/api publish"
  },
  "dependencies": {
    "@mistralai/mistralai": "^1.10.0",
    "@raycast/api": "^1.103.5",
    "@raycast/utils": "^2.2.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vitest": "^4.0.6"
  },
  "platforms": [
    "macOS"
  ]
}
