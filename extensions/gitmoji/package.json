{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "gitmoji",
  "title": "Gitmoji Search",
  "description": "Gitmoji is an emoji guide for your commit messages",
  "icon": "icon.png",
  "author": "ricoberger",
  "contributors": [
    "joshmedeski",
    "ridemountainpig"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "gitmoji",
      "title": "Gitmoji",
      "description": "Search your Gitmoji",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "copy",
      "type": "dropdown",
      "required": false,
      "title": "Copy",
      "data": [
        {
          "title": "Emoji ✨",
          "value": "emoji"
        },
        {
          "title": "Code :sparkles:",
          "value": "code"
        },
        {
          "title": "Description + Emoji ✨",
          "value": "description-emoji"
        },
        {
          "title": "Description + Code :sparkles:",
          "value": "description-code"
        }
      ],
      "description": "Copy the emoji, copy the code or copy description",
      "default": "emoji"
    },
    {
      "name": "action",
      "type": "dropdown",
      "required": false,
      "title": "Primary Action",
      "data": [
        {
          "title": "Copy",
          "value": "copy"
        },
        {
          "title": "Paste",
          "value": "paste"
        }
      ],
      "description": "Primary action of the extension",
      "default": "paste"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.8",
    "@raycast/utils": "^2.2.2",
    "gitmojis": "^3.15.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}
