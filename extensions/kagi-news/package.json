{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kagi-news",
  "title": "Kagi News",
  "description": "Read and explore Kagi News articles and sources seamlessly in Raycast",
  "icon": "extension-icon.png",
  "author": "mickaphd",
  "contributors": [
    "pernielsentikaer"
  ],
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "News"
  ],
  "license": "MIT",
